<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="NavigationTab" parent="Widget.Design.TabLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="paddingEnd">0dp</item>
    <item name="paddingStart">0dp</item>
    <item name="tabGravity">fill</item>
    <item name="tabMode">scrollable</item>
    <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
    <item name="tabBackground">@color/tab_bg</item>
    <item name="tabSelectedTextColor">@android:color/white</item>
    <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
    <item name="tabTextAppearance">@style/NavigationTabTextAppearance</item>
  </style>

  <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">@dimen/title_info_size</item>
  </style>

  <style name="MenuItemTextView">
    <item name="android:textSize">@dimen/main_menu_item_text_size</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:paddingRight">@dimen/space_16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/main_menu_item_height</item>
  </style>

  <style name="MenuCategoryTextView" parent="MenuItemTextView">
    <item name="android:textColor">@color/menu_category_text_color</item>
    <item name="android:drawablePadding">@dimen/space_8dp</item>
    <item name="android:background">@color/menu_category_bg</item>
  </style>

  <style name="ListSeparator">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/item_separator</item>
  </style>

</resources>
