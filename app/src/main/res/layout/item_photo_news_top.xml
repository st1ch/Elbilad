<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_8dp"
    android:background="@android:color/black"
    >

  <!--<ImageView-->
    <!--android:id="@+id/iv_image"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:scaleType="centerCrop"-->
    <!--app:layout_constraintDimensionRatio="16:9"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--/>-->

  <android.support.v4.view.ViewPager
      android:id="@+id/vp_photo_slide"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:scaleType="centerCrop"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/iv_arrow_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginBottom="@dimen/space_8dp"
      android:src="@drawable/ic_arrow_right_big"
      app:layout_constraintBottom_toBottomOf="@+id/vp_photo_slide"
      app:layout_constraintRight_toRightOf="@+id/vp_photo_slide"
      app:layout_constraintTop_toTopOf="@+id/vp_photo_slide"
      android:layout_marginRight="@dimen/space_8dp"
      />

  <ImageView
      android:id="@+id/iv_arrow_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginBottom="@dimen/space_8dp"
      android:src="@drawable/ic_arrow_left_big"
      app:layout_constraintBottom_toBottomOf="@+id/vp_photo_slide"
      app:layout_constraintLeft_toLeftOf="@+id/vp_photo_slide"
      app:layout_constraintTop_toTopOf="@+id/vp_photo_slide"
      android:layout_marginLeft="@dimen/space_8dp"
      />

  <inc.itnity.elbilad.presentation.custom.ElbiladTextView
      style="@style/Elbilad.TextView.ArticleTitle"
      android:id="@+id/tv_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="@dimen/space_8dp"
      android:ellipsize="end"
      android:gravity="right"
      android:maxLines="2"
      android:text="قرار جديحق لها الاستفادة من الدعم مستقبلا!"
      android:textColor="@android:color/white"
      android:textSize="24sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_date"
      />

  <inc.itnity.elbilad.presentation.custom.ElbiladTextView
      style="@style/Elbilad.TextView.ArticleTitle"
      android:id="@+id/tv_preview"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="@dimen/space_8dp"
      android:ellipsize="end"
      android:gravity="right"
      android:maxLines="2"
      android:text="قرار جديحق لها الاستفادة من الدعم مستقبلا!"
      android:textColor="@color/text_grey_hint"
      android:textSize="18sp"
      android:paddingBottom="@dimen/space_8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_title"
      />

  <inc.itnity.elbilad.presentation.custom.ElbiladTextView
      style="@style/Elbilad.TextView.Date"
      android:id="@+id/tv_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/space_8dp"
      android:layout_marginStart="@dimen/space_16dp"
      android:layout_marginTop="@dimen/space_8dp"
      android:gravity="right"
      android:text="17:43 | 18-10-2016"
      android:textColor="@color/text_grey_hint"
      android:textSize="12sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/tv_category"
      app:layout_constraintTop_toBottomOf="@+id/vp_photo_slide"
      />

  <inc.itnity.elbilad.presentation.custom.ElbiladTextView
      style="@style/Elbilad.TextView.CategoryTitle"
      android:id="@+id/tv_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="@dimen/space_8dp"
      android:gravity="right"
      android:text="مستقبلا"
      android:textColor="@color/action_bar_color"
      android:textSize="14sp"
      app:layout_constraintRight_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/vp_photo_slide"
      />
</android.support.constraint.ConstraintLayout>