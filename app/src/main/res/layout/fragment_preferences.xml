<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <android.support.v7.widget.SwitchCompat
      android:id="@+id/sc_offline_mode"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ElbiladSwitchCompatStyle"
      android:text="@string/settings_offline_mode"
      />

  <Spinner
      android:id="@+id/sp_offline_update_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/space_8dp"
      android:paddingRight="@dimen/space_8dp"
      android:background="@null"
      android:spinnerMode="dropdown" />

  <android.support.v7.widget.SwitchCompat
      android:id="@+id/sc_push_notifications"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ElbiladSwitchCompatStyle"
      android:text="@string/settings_push_notification"
      />

</LinearLayout>