<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gallery_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_8dp"
    android:background="@android:color/black"
    >

  <android.support.v4.view.ViewPager
      android:id="@+id/vp_photo_slide"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:scaleType="centerCrop"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/iv_arrow_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginBottom="@dimen/space_8dp"
      android:layout_marginRight="@dimen/space_8dp"
      android:src="@drawable/ic_arrow_right_big"
      app:layout_constraintBottom_toBottomOf="@+id/vp_photo_slide"
      app:layout_constraintRight_toRightOf="@+id/vp_photo_slide"
      app:layout_constraintTop_toTopOf="@+id/vp_photo_slide"
      />

  <ImageView
      android:id="@+id/iv_arrow_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginBottom="@dimen/space_8dp"
      android:layout_marginLeft="@dimen/space_8dp"
      android:src="@drawable/ic_arrow_left_big"
      app:layout_constraintBottom_toBottomOf="@+id/vp_photo_slide"
      app:layout_constraintLeft_toLeftOf="@+id/vp_photo_slide"
      app:layout_constraintTop_toTopOf="@+id/vp_photo_slide"
      />
</android.support.constraint.ConstraintLayout>